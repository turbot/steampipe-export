package plugin_server

import (
	"github.com/turbot/steampipe-plugin-{{.PluginAlias}}/{{.PluginAlias}}"
	"github.com/turbot/steampipe-plugin-sdk/v5/grpc"
	"github.com/turbot/steampipe-plugin-sdk/v5/plugin"
)

func GetPluginServer() *grpc.PluginServer {
	pluginServer := plugin.Server(&plugin.ServeOpts{
		PluginFunc: {{.PluginAlias}}.Plugin,
	})
	return pluginServer
}

func GetPluginAlias() string {
	return "{{.PluginAlias}}"
}